@model IEnumerable<LMS.Models.Publication>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PublicationName)
            </th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PubId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.PubId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.PubId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
