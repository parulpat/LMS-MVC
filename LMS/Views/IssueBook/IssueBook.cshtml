@model LMS.Models.BoookIssue
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Book Issue</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <div class="col-lg-12">
                <form asp-action="IssueBooks">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <label class="control-label">Book</label>
                            <select asp-for="BookId" id="BookId" class="form-control" asp-items="@(new SelectList(ViewBag.BookId,"BookId","BookName"))"></select>
                        </div>
                        <div class="col-lg-3">
                            <label class="control-label">Student </label>
                            <select asp-for="StudentId" class="form-control" asp-items="@(new SelectList(ViewBag.StudentId,"StudentId","StudentName"))"></select>
                        </div>
                        <div class="col-lg-3">
                            <label class="control-label">Days</label>
                            <input asp-for="Days" class="form-control" type="text" />
                        </div>
                        <div class="col-lg-2">
                            <label class="control-label"><br /><br /></label>
                            <input type="submit" value="Book Issue" class="btn btn-primary" />
                        </div>

                    </div>

                </form>
            </div>
          
        </div>
    </div>
</div>

